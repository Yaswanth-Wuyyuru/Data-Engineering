{
	"name": "PivotTransformations",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "PvotTransformation",
						"type": "DatasetReference"
					},
					"name": "SalesInput"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "PvotTransformation",
						"type": "DatasetReference"
					},
					"name": "PivotTransformationOutputSink"
				}
			],
			"transformations": [
				{
					"name": "PivotTransformation"
				}
			],
			"scriptLines": [
				"source(output(",
				"          ProductID as string,",
				"          Name as string,",
				"          OrderYear as string,",
				"          OrderQuantity as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> SalesInput",
				"SalesInput pivot(groupBy(ProductID,",
				"          Name),",
				"     pivotBy(OrderYear),",
				"     TotalOrders = sum(toDouble(OrderQuantity)),",
				"     columnNaming: '$V$N',",
				"     lateral: false) ~> PivotTransformation",
				"PivotTransformation sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          ProductID as string,",
				"          Name as string,",
				"          OrderYear as string,",
				"          OrderQuantity as string",
				"     ),",
				"     emptyLinesAsHeader: 1,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> PivotTransformationOutputSink"
			]
		}
	}
}